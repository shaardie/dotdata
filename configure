#!/bin/bash
#
# Small bash script to configure my programs

# VARS
DIRS=(.gnupg)
# config files and dirs
CONFS=(Lamotta Sturm Windows .gitconfig .gnupg/gpg.conf .gnupg/gpg-agent.conf .i3 i3setup.sh
.tmux.conf .vim .vimrc .Xdefaults .zcompdump .zshrc)
BACKUP=~/.dotdata.backup

# Create backup dir
mkdir -p $BACKUP

# Create dirs
for item in ${DIRS[*]}
do
	mkdir -p ~/$item
	mkdir -p $BACKUP/$item
done

# backup old config files and dirs in CONFS
for item in ${CONFS[*]}
do
	if [ -h ~/$item ]
	then
		rm --verbose ~/$item
	fi
	if [ -a ~/$item ]
	then
		mv --verbose ~/$item $BACKUP/$item
	fi
	ln --symbolic --verbose `pwd`/$item ~/$item
done
