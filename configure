#!/bin/bash
#
# Small bash script to configure my programs

# VARS
# config files and dirs
CONFS=(.gitconfig .gnupg/gpg.conf .i3 i3setup.sh .tmux.conf .vim .vimrc .Xdefaults
.zcompdump .zshrc)
BACKUP=~/.dotdata.backup

# Create backup folder
mkdir -p $BACKUP

# backup old config files and dirs in CONFS
for item in ${CONFS[*]}
do
	if [ -a ~/$item ]
	then
		mv ~/$item $BACKUP/$item
	fi
	ln --symbolic --verbose $item ~/$item
done
